{% extends 'base.html.twig' %}

{% block title %}Matières disponibles pour l'utilisateur{% endblock %}

{% block body %}
    <h1>Matières mises a disposition de l'élève</h1>

    <table class="table my-5 align-middle text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td><img src="{{ vich_uploader_asset(category, 'imageFile')}}" alt="categoryPictures" class="articleImage"></td>
                <td>
                    <div>
                        <a class="btn btn-block text-center w-100" href="{{ path('app_admin_category_show', {'id': category.id}) }}">Consulter les cours</a>
                        <a class="btn btn-block text-center w-100" href="{{ path('app_admin_category_edit', {'id': category.id}) }}">modifier la matière</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-block text-center w-100" href="{{ path('app_admin_category_new') }}">Insérer une nouvelle matière</a>
{% endblock %}
