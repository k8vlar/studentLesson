{% extends 'base.html.twig' %}

{% block title %}Categorytest{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ category.file }}</td>
            </tr>
            {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td class="fst-italic">{{ article.content }}</td>
                <td>
                    <a class="btn btn-block text-center w-100" href="{{ path('app_article_show', {'id': article.id}) }}">Consulter les Cours</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune matière disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-block text-center w-100" href="{{ path('app_admin_category_index') }}">Retour aux matières</a>

 

    {{ include('admin_category/_delete_form.html.twig') }}
{% endblock %}
