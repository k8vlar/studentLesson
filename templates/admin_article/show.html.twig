{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-block text-center w-100" href="{{ path('app_admin_article_index') }}">Retour a la liste des cours</a>

    <a class="btn btn-block text-center w-100" href="{{ path('app_admin_article_edit', {'id': article.id}) }}">Modifier l'article</a>

    {{ include('admin_article/_delete_form.html.twig') }}
{% endblock %}
