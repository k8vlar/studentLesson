{% extends 'base.html.twig' %}

{% block title %}Matière Choisie{% endblock %}

{% block body %}
        <h1 class= "categoryTitle">{{ category.title }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Description</th>
                    <td>{{ category.description }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>{{ category.file }}</td>
                </tr>
            </tbody>
        </table>
        <div>
        <table class="table mt-5">
            <div class="beforeCategoryLessons">
                <h3>Cours contenus dans cette matière :</h3>
            </div>
        <div class="row mt-5">
{% for article in articles %}
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4">
            <div class="card mb-3 container2"> 
                <h4 class="card-title text-center">{{article.title}}</h4>
                <ul class="list-group list-group-flush border: solid 1px black border-radius: 10px;">
                    <li class="list-group-item text-center">{{article.content}}</li>
                    <li class="list-group-item card-body"> <a href="{{path('app_article_show', {'id': article.id})}}" class="btn btn-block text-center w-100">Consulter le cours</a></li>
                </ul>
            </div>
        </div>
{% else %}
        <div>
                <td colspan="5">Aucune matière disponible</td>
        </div>

{% endfor %}
        </div>
            <a class="btn btn-block text-center w-100 mt-5" href="{{ path('app_category_index') }}">Retour aux Matières</a> 
        </div>
        
{% endblock %}
